@model mvc.Models.Contato

@{
    ViewData["Title"] = "Detalhar Contato";
}

<div class="col-md-6 mx-auto mt-5">
    <div class="d-flex row mb-3 align-items-center">
        <div class="col-5">
            <a asp-action="Index" class="text-decoration-none">
                <i class="bi bi-arrow-bar-left"></i>
                voltar
            </a>
        </div>
        <div class="col-7">
            <h2>Detalhar contato</h2>
        </div>
    </div>
</div>

<div class="card p-3">
    <div class="card-body">
        <div class="d-flex justify-content-end">
            <a asp-action="Editar" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-square"></i>
            </a>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                <dl>
                    @Html.DisplayNameFor(x => x.Id)
                </dl>
            </dt>
            <dt class="col-sm-10 fw-normal">
                <dl>
                    @Html.DisplayFor(x => x.Id)
                </dl>
            </dt>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                <dl>
                    @Html.DisplayNameFor(x => x.Nome)
                </dl>
            </dt>
            <dt class="col-sm-10 fw-normal">
                <dl>
                    @Html.DisplayFor(x => x.Nome)
                </dl>
            </dt>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                <dl>
                    @Html.DisplayNameFor(x => x.Telefone)
                </dl>
            </dt>
            <dt class="col-sm-10 fw-normal">
                <dl>
                    @Html.DisplayFor(x => x.Telefone)
                </dl>
            </dt>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                <dl>
                    @Html.DisplayNameFor(x => x.Ativo)
                </dl>
            </dt>
            <dt class="col-sm-10">
                @if (Model.Ativo)
                {
                    <dl>
                        <i class="bi bi-check-square-fill" style="color: green"></i>
                    </dl>
                }
                else
                {
                    <dl>
                        <i class="bi bi-x-square-fill" style="color: red;"></i>
                    </dl>
                }
            </dt>
        </div>
    </div>
</div>